<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kevinwong.module.sys.mapper.UserMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.kevinwong.module.sys.entity.UserEntity" id="userMap">
        <result property="userId" column="user_id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="salt" column="salt"/>
        <result property="email" column="email"/>
        <result property="mobile" column="mobile"/>
        <result property="status" column="status"/>
        <result property="createUserId" column="create_user_id"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <!--查询用户所有权限 -->
    <select id="queryAllPerms" resultType="string">
        select m.perms from sys_user_role ur
            left join sys_role_menu rm on ur.role_id
            left join sys_menu m on rm.menu_id = m.menu_id
        where ur.user_id = #{userId};
    </select>

    <!--查询用户所有菜单 -->
    <select id="queryAllMenuId" resultType="long">
        select distinct rm.menu_id from sys_user_role ur
            left join sys_role_menu rm on ur.role_id = rm.role_id
        where ur.user_id = #{userId};
    </select>

    <!--通过用户名查询 -->
    <select id="queryByUserName" resultType="com.kevinwong.module.sys.entity.MenuEntity">
        select * from sys_user where username = #{username};
    </select>

</mapper>